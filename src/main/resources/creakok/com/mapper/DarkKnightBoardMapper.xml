<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="creakok.com.mapper.DarkKnightBoardMapper">
	
	<select id="selectPerPage" resultType="Board" parameterType="PagingBoardVo">
		<![CDATA[
		select * from (select ROWNUM rnum, aa.* from (select * from DARKKNIGHT_BOARD order by board_index desc) aa)
		where rnum between #{start} and #{last}
		]]>
	</select>
	
	<select id="selectCount" resultType="long">
		select COUNT(BOARD_INDEX) from DARKKNIGHT_BOARD
	</select>
	
	<select id="selectBySeq" resultType="Board" parameterType="long">
		select * from DARKKNIGHT_BOARD where BOARD_INDEX = #{board_index}
	</select>
	
</mapper>
